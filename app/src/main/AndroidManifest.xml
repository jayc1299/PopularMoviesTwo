<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.android.test.popularmoviestwo" >

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/BaseTheme" >
		<activity
			android:name=".activities.ActivityMain"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".activities.ActivityDetail"
			android:label="@string/app_name"
			android:parentActivityName=".activities.ActivityMain">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.ActivityMain" />
		</activity>
		
		<activity android:name=".activities.ActivitySettings"
			android:label="@string/app_name"
			android:theme="@style/BaseTheme"
			android:parentActivityName=".activities.ActivityMain">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.ActivityMain" />
		</activity>

		<activity android:name=".activities.ActivityFavourites"
			android:label="@string/activity_favourites_title"
			android:parentActivityName=".activities.ActivityMain">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.ActivityMain" />
		</activity>

		<provider
			android:authorities="@string/favourites_provider"
			android:name=".database.FavouritesProvider" />
	</application>
</manifest>